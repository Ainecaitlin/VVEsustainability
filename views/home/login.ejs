<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/login.css">
    <style>
      .button {
        background-color: transparent;
        border: none;
        color: white;
        padding: 20px 34px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 20px;
        margin: 4px 2px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="form">
      <h3 class="mb-3">LOGIN</h3>
      <form class="user-form" action="/login" method="post">
        <div class="form-group row">
          <label for="username" class="col-sm-3 offset-sm-3">Username</label>
          <div class="col-sm-3">
            <input type="text" id="username" name="username" placeholder="Username" value="<%= username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
            <% if(errors.username){ %>
              <span class="invalid-feedback"><%= errors.username %></span>
            <% } %>
          </div>
        </div>

        <div class="form-group row">
          <label for="password" class="col-sm-3 offset-sm-3">Password</label>
          <div class="col-sm-3">
            <input type="password" id="password" name="password" placeholder="Password" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>">

            <% if(errors.password){ %>
              <span class="invalid-feedback"><%= errors.password %></span>
            <% } %>
          </div>
        </div>

        <% if(errors.login){ %>
          <div class="invalid-feedback d-block"><%= errors.login %></div>
        <% } %>

        <p class="message">
          "Not Register yet?"
          <a href="/users/new">Register</a>
        </p>

        <div class="mt-5">
          <input class="btn btn-primary" type="submit" value="LOGIN">
        </div>

      </form>

    </div>
  </body>
</html>
