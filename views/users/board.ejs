<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/register.css">
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="form mb-3">

      <h3 class="contentBoxTop mb-3">New VVE Board</h3>

      <form action="/users" method="post">

        <div class="row justify-content-center">
          <div class="col-sm-3">
            <input type="text" id="username" name="username" placeholder="Streetname VVE" value="<%= user.username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
            <% if(errors.username){ %>
              <span class="invalid-feedback"><%= errors.username.message %></span>
            <% } %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-3">
            <input type="text" id="name" name="name" placeholder="Postal code VVE" value="<%= user.name %>" class="form-control <%= (errors.name)?'is-invalid':'' %>">
            <% if(errors.name){ %>
              <span class="invalid-feedback"><%= errors.name.message %></span>
            <% } %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-3">
            <input type="text" id="email" name="email" placeholder="City VVE" value="<%= user.email %>" class="form-control <%= (errors.email)?'is-invalid':'' %>">
            <% if(errors.email){ %>
              <span class="invalid-feedback"><%= errors.email.message %></span>
            <% } %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-3">
            <input type="password" id="password" name="password" placeholder="KvK Number" value="" class="form-control <%= (errors.password)?'is-invalid':'' %>">
            <% if(errors.password){ %>
              <span class="invalid-feedback"><%= errors.password.message %></span>
            <% } %>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-sm-3">
            <input type="password" id="passwordConfirmation" name="construction Year" placeholder="Password Confirmation*" value="" class="form-control <%= (errors.passwordConfirmation)?'is-invalid':'' %>">
            <% if(errors.passwordConfirmation){ %>
              <span class="invalid-feedback"><%= errors.passwordConfirmation.message %></span>
            <% } %>
          </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-sm-3">
              <input type="text" id="username" name="username" placeholder="Number of Appartments" value="<%= user.username %>" class="form-control <%= (errors.username)?'is-invalid':'' %>">
              <% if(errors.username){ %>
                <span class="invalid-feedback"><%= errors.username.message %></span>
              <% } %>
            </div>
          </div>
        <div class="row justify-content-center">
          
          <div class="col-sm-3 ">
            <select class="custom-select" id="inlineFormCustomSelectPref">
              <option selected>I am..*</option>
              <option value="1">VVE BOARD</option>
              <option value="2">VVE MEMBER</option>
              <option value="3">SUPPLIER</option>
            </select>
          </div>
        </div>

        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>

        <div class="form-group">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
        
      </form>

    </div>
  </body>
</html>
